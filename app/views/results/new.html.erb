<%= provide(:title, "Record Big3 resutl")%>
<h1>Big3の記録を残す</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@result, url:results_path) do |f| %>
      <%# <%= render 'shared/error_messages' %> 

      <%= f.label :start_time %>
      <%= f.datetime_select :start_time %>

      <%= f.label :bench_press %>
      <%= f.number_field :bench_press, class: "form-control" %>

      <%= f.label :deadlift %>
      <%= f.number_field :deadlift, class: "form-control" %>

      <%= f.label :squat %>
      <%= f.number_field :squat, class: "form-control" %>

      <%= f.submit "記録する", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>