<%= provide(:title, "Record Big3 resutl")%>
<h1>Big3の記録を残す</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@result) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :training_at %>
      <%= f.datetime_field　:training_at, class: "form-control" %>

      <%= f.label :bench_press %>
      <%= f.number_field :bench_press, class: "form-control" %>

      <%= f.label :deadlift %>
      <%= f.number_field :deadlift, class: "form-control" %>

      <%= f.label :squat %>
      <%= f.number_field :squat, class: "form-control" %>

      <%= f.submit "編集する", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>